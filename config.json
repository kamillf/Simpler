{
  "build": {
    "solution": "app/Simpler.sln",
    "output": {
      "debug": "output/build/debug",
      "release": "output/build/release"
    }
  },

  "test": {
    "dll": "output/build/debug/Simpler.Tests.dll",
    "output": "output/test",
    "results": "output/test/results.xml"
  },

  "bump": {
    "files": [
      "app/Simpler/Properties/AssemblyInfo.cs",
      "app/Simpler/Simpler.nuspec"
    ]
  },

  "release": {
    "nupkgPattern": "Simpler.?.?.?.nupkg",
    "files": [
      "output/build/release/Simpler.dll",
      "output/build/release/Simpler.xml"
    ],
    "output": {
      "prep": "output/release/prep",
      "pack": "output/release/pack"
    }
  },

  "tools": {
    "please": "tools/please.exe",
    "nunit": "tools/nunit-console.exe",
    "nuget": "tools/NuGet.exe"
  }
}
